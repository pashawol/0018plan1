mixin pugin() 
	.pagination-wrapper
		ul.page-numbers
			mixin li(n)
				li
					if block
						block
					else
						a.page-numbers(href='#')= n 
			+li()
				span.prev.page-numbers( )
					img(src="img/svg/prev.svg", alt="")
			+li()
				span.prev.page-numbers( )
					img(src="img/svg/prev-double.svg", alt="")
